{
  "name": "@automation-platform/backend",
  "version": "1.0.0",
  "description": "Backend API and Core Platform Services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "db:setup": "npm run prisma:push && npm run prisma:seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.1.0",
    "@prisma/client": "^5.8.1",
    "bullmq": "^5.1.5",
    "redis": "^4.6.12",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bcrypt": "^5.0.2",
    "@types/semver": "^7.5.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3",
    "prisma": "^5.8.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1"
  }
}
